{
  "manifest_version": 3,
  "name": "AI Summary with Claude",
  "version": "2.0.0",
  "description": "Generate AI summaries of YouTube videos, articles, and web pages â€” save key learnings to Apple Notes",
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/readability.js",
        "extractors/base-extractor.js",
        "extractors/youtube-extractor.js",
        "extractors/article-extractor.js",
        "extractors/webpage-extractor.js",
        "extractors/video-extractor.js",
        "extractors/selection-extractor.js",
        "content-detector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/sidebar.html",
        "sidebar/sidebar.js",
        "sidebar/styles.css",
        "settings/settings.html",
        "settings/settings.css",
        "settings/settings.js",
        "extractors/article-extractor.js",
        "extractors/webpage-extractor.js",
        "extractors/video-extractor.js",
        "extractors/selection-extractor.js",
        "lib/readability.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  }
}
